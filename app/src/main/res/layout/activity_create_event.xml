<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ActivityCreateEvent">

    <TextView
        android:id="@+id/create_event_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Create A New Event"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@id/create_event_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Event name"
        android:textSize="15dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/event_name_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/event_name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/event_name_input"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Data(YYYY-MM-DD)"
        android:textSize="15dp"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/date_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/date"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/date_input"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Time(hh:mm)"
        android:textSize="15dp"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/time_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/time"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/time_input"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Location"
        android:textSize="15dp"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/location_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/location"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/sport"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/location_input"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Sport"
        android:textSize="15dp"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sport_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/sport"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/numParticipants"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/sport_input"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Max number of parcticipants"
        android:textSize="15dp"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/numParticipants_input"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/numParticipants"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/cancel_create_event"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:text="Cancel"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/confirm_create_event"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:text="Confirm"
        android:textSize="15dp"
        />



</RelativeLayout>