<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bingchen.meet4sports.ActivityWeather">

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_android"
        />

    <TextView
        android:id="@+id/forecast"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_below="@id/weatherIcon"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:text="24h Forecast:"
        />

    <TextView
        android:id="@+id/forecast_reading"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/weatherIcon"
        android:layout_toRightOf="@id/forecast"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_below="@id/forecast"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:text="Temperature:"
        />

    <TextView
        android:id="@+id/temperature_reading"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/forecast_reading"
        android:layout_toRightOf="@id/temperature"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_below="@id/temperature"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:text="Humidity:"
        />

    <TextView
        android:id="@+id/humidity_reading"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/temperature_reading"
        android:layout_toRightOf="@id/humidity"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/wind_speed"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_below="@id/humidity"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:text="Wind speed:"
        />

    <TextView
        android:id="@+id/wind_speed_reading"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/humidity_reading"
        android:layout_toRightOf="@id/wind_speed"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/wind_direction"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_below="@id/wind_speed"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:text="Wind direction:"
        />

    <TextView
        android:id="@+id/wind_direction_reading"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/wind_speed_reading"
        android:layout_toRightOf="@id/wind_direction"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/period"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/wind_direction"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/west"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_below="@id/period"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="15dp"
        android:text="West:"
        />

    <TextView
        android:id="@+id/west_forecast"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/period"
        android:layout_toRightOf="@id/west"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/east"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_below="@id/west"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="15dp"
        android:text="East:"
        />

    <TextView
        android:id="@+id/east_forecast"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/west_forecast"
        android:layout_toRightOf="@id/east"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/central"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_below="@id/east"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="15dp"
        android:text="Central:"
        />

    <TextView
        android:id="@+id/central_forecast"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/east_forecast"
        android:layout_toRightOf="@id/east"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/south"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_below="@id/central"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="15dp"
        android:text="South:"
        />

    <TextView
        android:id="@+id/south_forecast"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/central_forecast"
        android:layout_toRightOf="@id/central"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/north"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_below="@id/south"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="15dp"
        android:text="North:"
        />

    <TextView
        android:id="@+id/north_forecast"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/south_forecast"
        android:layout_toRightOf="@id/north"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/weather_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="refresh"
        android:textSize="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView_Bar"
            android:background="@drawable/white_grey_border_top"
            app:menu="@menu/bottom_navigation_menu">
        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>
</RelativeLayout>
